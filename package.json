{
  "name": "formshell",
  "version": "1.0.0",
  "description": "Elegant framework for creating interactive multi-step forms directly in the browser console",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "dev": "vite --config vite.site.config.ts",
    "types": "tsc -b",
    "build": "tsc && vite build",
    "build:site": "tsc && vite build && vite build --config vite.site.config.ts",
    "preview": "vite preview --config vite.site.config.ts",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "formshell",
    "console",
    "shell",
    "tui",
    "form",
    "interactive",
    "cli",
    "browser",
    "survey",
    "questionnaire"
  ],
  "author": "Kasbrut",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^25.2.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-dts": "^3.7.2"
  }
}
